.wrapper-xs.bg-light.b-b
  .m-l-md.font-thin.h3 Jobs
.col-lg-10.col-lg-offset-1.wrapper-md
  table.table.m-b-none(ng-init="color={'High Priority':'success','Open': 'info', 'Hold': 'warning', 'Closed': 'danger'}" before-bottom='JobsList.loadJobs()')
    thead
      tr
        th Positions
        th(style='width:20%;') Status
        th(style='width:20%;') CVs in Pipeline
    tbody
      tr.bg-white(ng-repeat='job in JobsList.jobs')
        td.wrapper-md: a(ui-sref='jobs-view({jobId: job.id })') {{job.role}}
        td.wrapper-md(class="text-{{color[job.job_status]}}-dker") {{job.job_status}}
        td.wrapper-md {{job.total_applicants}}
    tfoot
      tr
        td
          button.pull-right.btn.active.m-t-xs(ng-if="JobsList.ui.loading")
            i.fa.fa-circle-o-notch.fa-spin
            strong &nbsp;Loading
          button.pull-right.btn.btn-primary.m-t-xs(ng-if="JobsList.ui.lazyLoad" ng-click="JobsList.loadJobs()")
            i.fa.fa-plus-circle
            strong &nbsp;Load More
        td
        td
