.wrapper-xs.bg-light.b-b
  //a.btn.btn-sm.btn-primary.btn-addon.pull-right.m-t-n-xs(uib-tooltip='Create new job Position' ui-sref='jobs.new')
    i.fa.fa-plus
    | Add
  .m-l-md.font-thin.h3 Manage JD
.col-lg-10.col-lg-offset-1.wrapper-md
  table.table.m-b-none(ng-init="color={'High Priority':'success','Open': 'info', 'Hold': 'warning', 'Closed': 'danger'}" before-bottom='ManageJd.loadJobs()')
    thead
      tr
        th Positions
        th(style='width:20%;') Status
        th(style='width:20%;') CVs in Pipeline
        th(style='width:5%;') Accept
        th(style='width:5%;') Hold
        th(style='width:5%;') Reject
    tbody
      tr.bg-white(ng-repeat='job in ManageJd.jobs')
        td.wrapper-md: a(ui-sref='jobs-manage({jobId: job.id, bucket: "Pending Feedback" })') {{job.role}}
        td.wrapper-md(class="text-{{color[job.job_status]}}-dker") {{job.job_status}}
        td.wrapper-md {{job.total_applicants}}
        td.wrapper-md(ng-repeat="responseValue in [1,2,3]")
          input(type="radio" name="radio_{{job.allocation_id}}" ng-model="job.response_id" ng-value="responseValue" ng-change="ManageJd.updateResponse(job.id,job.allocation_id,job.response_id)")
    tfoot
      tr
        td
          button.pull-right.btn.active.m-t-xs(ng-if="ManageJd.ui.loading")
            i.fa.fa-circle-o-notch.fa-spin
            strong &nbsp;Loading
          button.pull-right.btn.btn-primary.m-t-xs(ng-if="ManageJd.ui.lazyLoad" ng-click="ManageJd.loadJobs()")
            i.fa.fa-plus-circle
            strong &nbsp;Load More
        td
        td
        td
