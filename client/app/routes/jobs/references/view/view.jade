      //      i.fa.fa-user-plus(ng-click='App.addFollower([JobReferenceView.data.follower],JobReferenceView.data.id)' title='Add Follower')
      //  .panel-body
      //    .h6.clearfix
      //      .pull-left.b-a.b-info.text-info-dker.m-r-xs.m-b-xs.r(ng-repeat='follower in JobReferenceView.data.follower' style='padding: 2px;' ng-if='JobReferenceView.data.showAllFollower || $index < 6') {{follower.name}}
      //      a.pull-left(ng-click='JobReferenceView.data.showAllFollower = !JobReferenceView.data.showAllFollower')
      //        span.font-bold.text-info-dker(ng-if='JobReferenceView.data.showAllFollower') – Less
      //        span.font-bold.text-info-dker(ng-if='!JobReferenceView.data.showAllFollower') + More

    //- Resume container
  .col-md-8.no-padder.fixed-resume-
    div(style='position: relative; height: 100%; width: 100%; top: 0; overflow: hidden;')
      iframe.h-full.b-a.b-light.w-full(ng-src='{{JobReferenceView.trustSrc(JobReferenceView.resumeSrc)}}')

