//- list
ul.nav
  li.hidden-folded.padder.m-t.m-b-sm.text-muted.text-xs
    span Navigation
  li(ui-sref-active='active'): a(ui-sref='dashboard')
    i.fa.fa-bar-chart.icon.text-primary-dker
    span.font-bold Dashboard
  li(ui-sref-active='active'): a(ui-sref='jobs.list')
    b.hide.badge.bg-info.pull-right 20
    i.fa.fa-list-alt.icon.text-info-dker
    span.font-bold Positions
  li(ui-sref-active='active'): a(ui-sref='applicants({bucket: "All"})')
    i.fa.fa-users.icon.text-primary-dker
    span.font-bold Candidates
  li(ui-sref-active='active'): a(ui-sref='calendar')
    b.hide.badge.bg-info.pull-right 9
    i.fa.fa-calendar-check-o.icon.text-success-dker
    span.font-bold Calendar
  li.hide(ui-sref-active='active'): a(ui-sref='payment')
    i.fa.fa-credit-card.icon.text-danger-lter
    span.font-bold Payment


